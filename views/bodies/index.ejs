<script>
	document.title = '<%= title %>';
	document.getElementById('upperbar').style.display = "none";
</script>

<div class="index-content">

	<h1 id="logo"><span>Obli</span>Chat</h1>

	<% if (message.length > 0) { %>
		<div class="alert alert-danger">
			<a class="close">x</a> <%= message %>
		</div>
	<% } %>

	<% if (error.length > 0) { %>
		<div class="alert alert-danger">
			<a class="close">x</a> <%= error %>
		</div>
	<% } %>

	<div id="erroralert" class="alert alert-danger" style="margin: 10px auto;"></div>

	<div id="panel" class="panel panel-default col-centered">
		<div class="panel-body">
			<form id="loginform" data-toggle="validator" role="form" method="post">

				<div class="form-group has-feedback text-center">
					<label for="username" class="control-label">Username</label>

					<input class="form-control text-center" name="username" type="text" pattern="^[_A-z0-9]{1,}$" maxlength="20"
						   id="username" placeholder="JollyRogers" data-error="This name is invalid" required>

					<span class="glyphicon form-control-feedback" aria-hidden="true"></span>
					<div class="help-block with-errors"></div>
				</div>

				<div class="form-group has-feedback text-center">
					<label for="password" class="control-label">Password</label>
						<input class="form-control text-center" name="password" type="password" data-toggle="validator"
								data-minlength="6" id="inputPassword" placeholder="Password">
				</div>

				<div class="form-group text-center">
					<button type="submit" class="btn btn-lg btn-primary submitButton">Login</button>
				</div>

				<br />
				<p class="text-center">Don't have an account? <br /> <a href="register">Register here.</a> </p>

			</form>
		</div>
	</div> <!-- /example -->


</div>


